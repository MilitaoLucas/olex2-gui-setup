<tr>
<!-- #include tool-help-first-column gui\blocks\tool-help-first-column.htm;help_ext=Atom-Styles;1; -->
  </td>
  <td width='23%'>
    <b>%Atoms%</b>:
  <td width='75%' colspan='2'>
    <a target="Set atom colours and styles" href="
Freeze(true)>>
@reap -b 'BaseDir()/sample_data/Periodic Table/Periodic Table.cif' -b>>
sel -a>>
conn 0 0>>
matr 3>>
rota 2 90>>
Freeze(false)>>
">%Atom Styles%
    </a>
  </td>
</tr>



<tr>
<!-- #include tool-help-first-column gui\blocks\tool-help-first-column.htm;help_ext=Background;1; -->
  </td>
  <td width='23%'>
    <b>Background:</b>
  </td>
  <td width='65%' colspan='2'>
    <a 
      href="swapbg" 
      target="%swapbg-target%">
      %swapbg%
    </a>
    &nbsp;
    <a 
      href="grad -i" 
      target="%graduated-target%">
      %graduated%
    </a> 
  </td>
</tr>

<tr>
<!-- #include tool-help-first-column gui\blocks\tool-help-first-column.htm;help_ext=GUI-Side;1; -->
  </td>
  <td width='23%'>
    <b>GUI left/right</b>
  </td>
  <td width='65%' colspan='2'>
    <a 
      href="htmlpanelswap" 
      target="%htmlpanelswap-target%">
      %htmlpanelswap%
    </a> 
  </td>
</tr>


<tr>
<!-- #include tool-help-first-column gui\blocks\tool-help-first-column.htm;help_ext=Tooltips;1; -->
  </td>
  <td width='23%'>
    <b>%Tooltips%:</b>
  </td>
  <td width='55%' >
    Show tooltips when hovering
  </td>
  <td width='20%' align='right'>
    <input 
      type="checkbox"
      height="$GetVar(HtmlCheckboxHeight)"
      name="SHOW_TOOLTIPS"
      fgcolor="$GetVar(HtmlFontColour)"
      checked="$not(strcmp(spy.GetParam(user.show_tooltips),0))"
      width='15'
      oncheck="spy.SetParam(user.show_tooltips,1)>>html.tooltips true" 
      onuncheck="spy.SetParam(user.show_tooltips,0)>>html.tooltips false"
      target="Show tooltips when hovering over a control"
 
    >
  </td>
</tr>

<tr>
<!-- #include tool-help-first-column gui\blocks\tool-help-first-column.htm;help_ext=Info-Bar;1; -->
  </td>
  <td width='23%'>
    <b>%Info%:</b>
  </td>
  <td width='55%' >
    Show bar with structure info
  </td>
  <td width='20%' align='right'>
    <input 
      type="checkbox"
      height="$GetVar(HtmlCheckboxHeight)"
      name="SHOW_INFO"
      fgcolor="$GetVar(HtmlFontColour)"
      checked="$not(strcmp(spy.GetParam(user.show_info),0))"
      width='15'
      oncheck="spy.SetParam(user.show_info,1)>>showwindow info true" 
      onuncheck="spy.SetParam(user.show_info,0)>>showwindow info false"
    >
  </td>
</tr>  

<tr>
<!-- #include tool-help-first-column gui\blocks\tool-help-first-column.htm;help_ext=Reset-Alerts;1; -->
  </td>
  <td width='23%'>
    <b>%Alerts%:</b>
  </td>
  <td width='55%' >
    Reset all alerts
  </td>
  <td width='20%' align='right'>
    <a href="spy.SwitchAllAlertsOn()" target="Switch all alerts on">%Reset%</a>
  </td>
</tr>

<tr>
<!-- #include tool-help-first-column gui\blocks\tool-help-first-column.htm;help_ext=Console-Lines;1; -->
  </td>
  <td width='23%'>
    <b>%Lines%</b>:
  </td>
  <td width='55%' >
    Number of lines in the console
  </td>
  <td width='20%' align='right'>
     <input
       type="combo"
       height="$GetVar(HtmlInputHeight)"
       name="LINES_OF_TEXT"
       bgcolor="$GetVar(HtmlInputBgColour)"
       value=""
       items="All<--1;1<-2;5<-6;10<-11;20<-21"
       onchange="lines GetValue(~name~)"
       valign='center'
       align='right'
       width="100%"
       manage
     >
  </td>
</tr>

<tr>
<!-- #include tool-help-first-column gui\blocks\tool-help-first-column.htm;help_ext=GUI-Width;1; -->
  </td>
  <td width='23%'>
    <b>%Panel Width%:</b>
  </td>
  <td width='65%' colspan='2'>
    <a href="panel 400">%Default%</a>
    <a href="panel 300">%Narrow%</a>
    <a href="panel 500">%Wide%</a>
  </td>
</tr>


<tr>
<!-- #include tool-help-first-column gui\blocks\tool-help-first-column.htm;help_ext=Language;1; -->
  </td>
  <td width='23%'>
    <b>%Language%:</b>
  </td>
  <td width='65%' colspan='2'>
  <a href="CurrentLanguage(English)>>panel">English</a>
    <a href="cursor(busy,'%Changing Language to% %Chinese%')>>CurrentLanguage(Chinese)>>panel>>cursor()">%Chinese%</a>
    </td>
  </tr>

<tr>
<!-- #include tool-help-first-column gui\blocks\tool-help-first-column.htm;help_ext=Fader;1; -->
  </td>
  <td width='23%'>
   <b>%Use Fader%:</b>
  </td>
  <td width='55%'>
    Structures will fade in and out
  </td>
  <td width='20%' align='right'>
    <input 
      type="checkbox"
      height="$GetVar(HtmlCheckboxHeight)"
      name="USE_FADER"
      fgcolor="$GetVar(HtmlFontColour)"
      checked="$not(strcmp(spy.GetParam(user.use_fader),0.0))"
      width='15'
      oncheck="spy.SetParam(user.use_fader,0.4)" 
      onuncheck="spy.SetParam(user.use_fader,0)"
    >
  </td>
</tr>

<tr>
<!-- #include tool-help-first-column gui\blocks\tool-help-first-column.htm;help_ext=Start-Olex2-in;1; -->
  </td>
  <td width='23%'>
    <b>%Start Olex2 in%:</b>
  </td>
  <td width='55%'>
     Where Olex2 will open after restart 
  </td>
  <td width='20%' align='right'>
     <input

       type="combo"
       height="$GetVar(HtmlInputHeight)"
       name="START_WHERE"
       bgcolor="$GetVar(HtmlInputBgColour)"
       width="100%"
       value="$spy.GetParam(user.start_where)"
       items="Home;Work;View;Tools;Info"
       onchange="spy.SetParam(user.start_where,GetValue(~name~))"
       valign='center'
       align='right'
       readonly
     >
  </td>
</tr>


</table>

