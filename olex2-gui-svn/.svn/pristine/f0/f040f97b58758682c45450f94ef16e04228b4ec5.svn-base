<font color=$spy.GetParam(gui.html.font_colour)  size=$spy.GetParam(gui.html.font_size)>

<table border="0" VALIGN='center' style="border-collapse: collapse" width="100%" cellpadding="1" cellspacing="1" bgcolor="$spy.GetParam(gui.html.table_firstcol_colour)">

<tr name=EDIT_CIF>
<!-- #include tool-column gui\blocks\tool-first-column.htm;help_ext=cif-info;1; -->
<!-- #include row_table_on gui\blocks\row_table_on.htm;1; -->
<!-- #include tool-column gui\blocks\tool-help-first-column.htm;help_ext=cif-info;1; -->
  <td name=EDIT_CIF_INFO align='center' VALIGN='center' width='33%'>
$spy.MakeActiveGuiButton(button-edit_cif_info,"spy.ExtractCifInfo\()>>spy.EditCifInfo\()>>updatehtml")
  </td>
  <td name=MERGE_CIF_INFO align='center' VALIGN='center' width='33%'>
$spy.MakeActiveGuiButton(button-merge_cif,"spy.MergeCif\(True)>>updatehtml")
  </td>
  <td name=VALIDATE_CIF align='center' VALIGN='center' width='33%'>
$spy.MakeActiveGuiButton(button-validate_cif,"spy.ValidateCif")
  </td>
</tr>
<!-- #include row_table_off gui\blocks\row_table_off.htm;1; -->

<tr VALIGN='center' ALIGN='left' NAME='SNUM_REPORT_TITLE' valign='center'>
<!-- #include tool-column gui\blocks\tool-first-column.htm;help_ext=;1; -->
<!-- #include row_table_on gui\blocks\row_table_on.htm;1; -->
  <td>
    <b>%Title%</b>
  </td>
  <td>
    <input
      type='text'
      width="$eval((html.clientwidth(self)-160)/2 )"
      valign='center'
      height="17"
      bgcolor="spy.GetParam(gui.html.input_bg_colour)"
      name='SET_SNUM_REPORT_TITLE'
      value='$spy.GetParam(snum.report.title)'
      onleave="spy.SetParam(snum.report.title,GetValue(SET_SNUM_REPORT_TITLE))"
    >
  <td>
    <b>%Image%</b>
  </td>
  <td>
    <input
      type="combo"
      width="$eval((html.clientwidth(self)-160)/2)"
      height="$spy.GetParam(gui.html.combo_height)"
      bgcolor="spy.GetParam(gui.html.input_bg_colour)"
      name="SET_REPORT_IMAGE"
      readonly
      items='file.ListDirForGui(FilePath(),*.png;*.jpg;*.bmp;*.ps;*.eps)'
      onchange="spy.SetParam(snum.report.image,GetValue(SET_REPORT_IMAGE))"
      width="50%"
      value="file.GetName($spy.GetParam(snum.report.image))"
    >
  </td>
</tr>
<tr>
  <td>
    <b>%Style%</b>
  </td>
  <td>
    <input
      type='combo'
      width="$eval((html.clientwidth(self)-160)/2)"
      height="17"
      bgcolor="spy.GetParam(gui.html.input_bg_colour)"
      name='SET_USER_REPORT_STYLE'
      value='$spy.GetParam(user.report_style)'
      items='spy.getStylesList()'
      valign='center'
      onchange="spy.SetParam(user.report_style,GetValue(SET_USER_REPORT_STYLE))"
    >
  </td>
  <td>
    <b>%Template%</b>
  </td>
  <td>
    <input
      type='combo'
      width="$eval((html.clientwidth(self)-160)/2)"
      height="17"
      bgcolor="spy.GetParam(gui.html.input_bg_colour)"
      name='SET_USER_REPORT_TEMPLATE'
      value='$spy.GetParam(user.report_template)'
      items='spy.getTemplatesList()'
      valign='center'
      onchange="spy.SetParam(user.report_template,GetValue(SET_USER_REPORT_TEMPLATE))"
    >
  </td>
  <td>
    <a target="Browse for styles and templates" href="exec -o getvar(defexplorer) 'file.ospath(basedir()/etc/CIF/styles)'">
    <zimg  border="0" src="toolbar-open.png"></a>
  </td>
<!-- #include row_table_off gui\blocks\row_table_off.htm;1; -->
</tr>


