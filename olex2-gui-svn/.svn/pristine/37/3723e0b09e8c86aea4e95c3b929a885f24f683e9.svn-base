<!-- #include tool-h3 gui\blocks\tool-h3.htm;image=#image;colspan=1;1; -->

<!-- FIRST ROW -->
<tr name=IMAGE_BITMAP_ROW_1>
<!-- #include tool-help-column gui\blocks\tool-first-column.htm;help_ext=mode_name;1; -->
<!-- #include row_table_on gui\blocks\row_table_on.htm;1; -->
  <td name-=IMAGE_BITMAP_CHOOSE_FONTS>
    <a href="setfont AtomLabels ChooseFont(Olex2,spy.GetParam(snum.image.bitmap.font_name))>>spy.SetParam(snum.image.bitmap.font_name,GetFont(AtomLabels))">%images_bmp_label_olex_font%</a> | 
    <a href="setfont AtomLabels ChooseFont(System,spy.GetParam(snum.image.bitmap.font_name))>>spy.SetParam(snum.image.bitmap.font_name,GetFont(AtomLabels))">%images_bmp_label_system_font%</a>
  </td>
<!-- #include row_table_off gui\blocks\row_table_off.htm;1; -->
</tr>


<!-- SECOND ROW -->
<tr name=IMAGE_BITMAP_ROW_2>
<!-- #include tool-help-column gui\blocks\tool-first-column.htm;help_ext=mode_name;1; -->
<!-- #include row_table_on gui\blocks\row_table_on.htm;1; -->
  <td>
    Name
  </td>
  <td name=IMAGE_BITMAP_NAME>
    <input 
      type="text" 
      height="$spy.GetParam(gui.html.input_height)"
      bgcolor="$spy.GetParam(gui.html.input_bg_colour)"
      valign='center'
      name="IMAGE_BITMAP_NAME"
      width="70"
      height="$spy.GetParam(gui.html.input_height)"
      value="$spy.GetParam(snum.image.bitmap.name)"
      onleave="spy.SetParam(snum.image.bitmap.name,GetValue(IMAGE_BITMAP_NAME))"

    >
  </td>
  <td>
    Type
  </td>
  <td name=IMAGE_BITMAP_TYPE>
    <input 
      type="combo" 
      height="$spy.GetParam(gui.html.combo_height)"
      width="$spy.GetParam(gui.html.combo_width_2)"
      bgcolor="$spy.GetParam(gui.html.input_bg_colour)"
      items='png;jpg;bmp'
      valign='center'
      name="IMAGE_BITMAP_TYPE"
      value='$spy.GetParam(user.image.bitmap.type)'
      onchange='spy.SetParam(user.image.bitmap.type,GetValue(IMAGE_BITMAP_TYPE))'
    >
  </td>
  <td>
    Size
  </td>
  <td name=IMAGE_BITMAP_SIZE>
    <input 
      type="combo" 
      height="$spy.GetParam(gui.html.combo_height)"
      bgcolor="$spy.GetParam(gui.html.input_bg_colour)"
      items="1;2;4;800px<-800;1200px<-1200;1800px<-1800;3200px<-3200"
      height="$spy.GetParam(gui.html.input_height)"
      valign='center'
      name="IMAGE_BITMAP_SIZE"
      width="60"
      value='2'
    >
  </td>
  <td>
$spy.MakeHoverButton(button_small-go@bitmap,cursor\(busy,'Please Wait. Making image. This may take some time')>>run 'pict -pq strcat\(GetValue\(IMAGE_BITMAP_NAME).,GetValue\(IMAGE_BITMAP_TYPE)) GetValue\(IMAGE_BITMAP_SIZE)'>>cursor\())
  </td>
<!-- #include row_table_off gui\blocks\row_table_off.htm;1; -->
</tr>

