<!-- #include tool-h3 gui\blocks\tool-h3.htm;image=#image;colspan=1;1; -->

<tr>
<!-- #include tool-column gui\blocks\tool-first-column.htm;1; -->
<!-- #include row_table_on gui\blocks\row_table_on.htm;1; -->
  <td>
<!-- #include tool-help-button gui\blocks\tool-help-button.htm;help_ext=electron-density;1; -->
  </td>
  <td>
    <input
      type="combo"
      height="$spy.GetParam(gui.html.combo_height)"
      bgcolor="$spy.GetParam(gui.html.input_bg_colour)"
      name="SET_SNUM_MAP_TYPE"
      items='diff;fcalc;2Fo-Fc<-tomc;fobs'
      value="$spy.GetParam(snum.map.type)"
      width="15%"
      onchange="
spy.SetParam(snum.map.type,GetValue(SET_SNUM_MAP_TYPE))>>
spy.MapView()>>
html.SetValue(SNUM_XGRID_SLIDE,'eval(xgrid.GetMin()*10), eval(xgrid.GetMax()*10)')"
      label="%Map% "
      valign="center"
      readonly
  >
  </td>
  <td>
    <input
      type="combo"
      height="$spy.GetParam(gui.html.combo_height)"
      bgcolor="$spy.GetParam(gui.html.input_bg_colour)"
      name="SET_SNUM_MAP_SOURCE"
      items='olex;fcf;'
      value="$spy.GetParam(snum.map.source)"
      width="15%"
      onchange="
spy.SetParam(snum.map.source,GetValue(SET_SNUM_MAP_SOURCE))>>
spy.MapView()>>
html.SetValue(SNUM_XGRID_SLIDE,'eval(xgrid.GetMin()*10), eval(xgrid.GetMax()*10)')"
      label="%Source% "
      valign="center"
      height="$spy.GetParam(gui.html.combo_height)"
      readonly
  >
  </td>
  <td>
    <input
      type="text"
      name = "SET_SNUM_MAP_RESOLUTION"
      width="15%"
      height="$spy.GetParam(gui.html.input_height)"
      label="%Res%/&Aring "
      valign="center"
      bgcolor="$spy.GetParam(gui.html.table_bg_colour)"
      fgcolor="$spy.GetParam(gui.html.font_colour)"
      value="$spy.GetParam(snum.map.resolution)"
      onleave="spy.SetParam(snum.map.resolution,GetValue(SET_SNUM_MAP_RESOLUTION))"
    >
  </td>
  <td colspan = '1' valign='bottom'>
    <input
      bgcolor="$spy.GetParam(gui.html.table_bg_colour)"
      fgcolor="$spy.GetParam(gui.html.font_colour)"
      type="checkbox"
      value="%Mask%"
      valign="bottom"
      name="SNUM_MAP_MASK"
      checked="$spy.GetParam(snum.map.mask)"
      height="$spy.GetParam(gui.html.input_height)"
      width='20%' 
      oncheck="spy.SetParam(snum.map.mask,True)"
      onuncheck="spy.SetParam(snum.map.mask,False)">
  </td>
  <td colspan='1' valign='bottom' align="center">
$spy.MakeHoverButton(button_small-map,spy.MapView\())
  </td>

<!-- #include row_table_off gui\blocks\row_table_off.htm;1; -->
</tr>

<tr>
<!-- #include tool-column gui\blocks\tool-first-column.htm;1; -->
<!-- #include row_table_on gui\blocks\row_table_on.htm;1; -->
<!-- #include row_table_off gui\blocks\row_table_off.htm;1; -->
</tr>
