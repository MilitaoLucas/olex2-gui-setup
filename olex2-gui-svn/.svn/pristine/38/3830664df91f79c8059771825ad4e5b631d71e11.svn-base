<!-- FIRST ROW -->
<tr name=HEADLINE_PACK_RADIUS_1>
  <td name=HEADLINE_PACK_RADIUS colspan='2' bgcolor="$GetVar(HtmlTableFirstcolColour)">
    <b>
      %Pack Radius%
    </b>
  </td>
</tr>

<!-- SECOND ROW -->
<tr name=PACK_RADIUS_2>
  <td name=SLIDER_PACK_RADIUS>
    <font size='$GetVar(HtmlFontSizeControls)'>
    <input 
      type="slider" 
      name = "SlidePackRadius" 
      width="$eval(html.clientwidth(self)-90)" 
      height="20" 
      value="0" 
      bgcolor="$GetVar(HtmlTableBgColour)"  
      fgcolor="$GetVar(HtmlFontColour)" 
      min="2" 
      max="20" 
      onchange = "
SetValue(PackRadius,getvalue(SlidePackRadius))>>
pack getvalue(PackRadius)>>
"
  >
  </font>
  </td>
  <td name=PACK_RADIUS_VALUE>
    <font size='$GetVar(HtmlFontSizeControls)'>
    <input 
      type="text" 
      name = "PackRadius" 
      width="32" 
      height="20" 
      bgcolor="$GetVar(HtmlTableBgColour)"  
      fgcolor="$GetVar(HtmlFontColour)" 
      value="getvalue(SlidePackRadius)" 
      onreturn="SetValue(SlidePackRadius,GetValue(PackRadius))>>
fuse>>
pack GetValue(PackRadius)"
    >
    </font>
  </td>
</tr>