    <table><tr>
      <td width='30%'>
        $spy.MakeHoverButton(toolbar-sp2,mode hfix 43)&nbsp;
        $spy.MakeHoverButton(toolbar-sp2-1H,mode hfix 43)
        $spy.MakeHoverButton(toolbar-sp2-2H,mode hfix 93)
      </td>
      <td width='40%'>
        $spy.MakeHoverButton(toolbar-sp3,mode hfix 13)&nbsp;
        $spy.MakeHoverButton(toolbar-sp3-1H,mode hfix 13)
        $spy.MakeHoverButton(toolbar-sp3-2H,mode hfix 23)
        $spy.MakeHoverButton(toolbar-sp3-3H,mode hfix 137)
      </td>
      <td width='20%'>
        $spy.MakeHoverButton(toolbar-OH,mode hfix 147)
        $spy.MakeHoverButton(toolbar-O-H,mode hfix 83)
