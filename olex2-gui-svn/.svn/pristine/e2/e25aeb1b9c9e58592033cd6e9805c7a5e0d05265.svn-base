<!-- SECOND ROW -->
<tr name=MAIN_TOOLBAR_HYDROGEN_2>
<!-- #include tool-help-first-column gui\blocks\tool-help-first-column.htm;help_ext=toolbar-hydrogen_2;1; -->
  <td width="100%">
    <table width="100%">
    <tr>
      <td VALIGN='center' width='15%'>
        <font size=$GetVar(HtmlFontSizeControls)>
        <input
          type="text"
          bgcolor="$GetVar(HtmlInputBgColour)"
          name = "HFIX"
          width="100%"
          height="17"
          value = "137"
        >
        </font>
          
      </td>
      <td VALIGN='center' width='10%'>
$spy.MakeHoverButton(button_small-hfix,if strcmp\(spy.GetParam\(olex2.short_mode),'hfix') then 'mode off'  else 'mode hfix getvalue\(HFIX)')
      </td>
    <td width="25%" align="right">
      <b>%HIMP%</b>
    </td>
    <td width="35%">
      <font size=$GetVar(HtmlFontSizeControls)>
      <input
        type="combo"
        bgcolor="spy.GetParam(gui.html.input_bg_colour)"
        height="$GetVar(HtmlComboHeight)"
        name = "HIMP_DISTANCE"
        width="100%"
        value=""
        items='B-H (1.19)<-1.19;sp3-C-H (1.083)<-1.083;sp2-C-H (1.077)<-1.077;sp3-N-H (1.033)<-1.033;sp2-N-H (1.009)<-1.009;O-H (0.983)<-0.983;'
        onchange = "labels -l -h>>mode himp GetValue(HIMP_DISTANCE)"
      >
      </font>
    </td>
    </tr></table>
  </td>
</tr>

