<!-- #include tool-top gui\blocks\tool-top.htm;image=#image;onclick=#onclick;1; -->

<!-- FIRST ROW -->
<!-- #include tool-row-help gui\blocks\tool-row-help.htm;name='REFLECTION_FILE';help_ext=reflection-file;1 -->
  <td name=REFLECTION_FILE_LABEL width="10%">
    <b>%hkl File%</b>
  </td>

  <td name=REFLECTION_FILE_INPUT align='left' width="25%">
<!-- #include reflection-file gui\snippets\snippet-reflection-file.htm;1; -->
  </td>


  <td align='right' width="15%">
  Use plotly?
  </td>

  <td name=USE_PLOTLY align='left' width="5%">
    $+
    html.Snippet("gui/snippets/input-checkbox", "name=USE_PLOTLY",
    "checked=spy.GetParam('user.diagnostics.use_plotly')",
    "onclick=spy.SetParam('user.diagnostics.use_plotly', html.GetState('~name~'))")
    $-
  </td>

  <td align='right' width="15%">
  Write file?
  </td>

  <td name=SAVE_FILE align='left' width="5%">
    $+
    html.Snippet("gui/snippets/input-checkbox", "name=SAVE_FILE",
    "checked=spy.GetParam('user.diagnostics.save_file')",
    "onclick=spy.SetParam('user.diagnostics.save_file', html.GetState('~name~'))")
    $-
  </td>


  <td name=SHOW_DIAGNOSTICS align='right' width="20%">
  Pin Summary
  </td>

  <td name=SHOW_DIAGNOSTICS align='right' width="5%">
    $+
    html.Snippet("gui/snippets/input-checkbox", "name=SHOW_DIAGNOSTICS",
    "checked=spy.GetParam('user.diagnostics.pin_scopes')",
    "onclick=spy.SetParam('user.diagnostics.pin_scopes', html.GetState('~name~'))>>spy.make_HOS(True)>>html.update")
    $-
  </td>


