<tr>
<td width="8" bgcolor="$spy.GetParam(gui.html.table_firstcol_colour)"></td></td>
  </td>

<td  valign='center' colspan='1'>
  <b>%Use Fader%:</b>
    </td>
  <td colspan='2'>
  <input 
    type="checkbox"
      float height="$spy.GetParam(gui.html.checkbox_height)"
      bgcolor="$spy.GetParam(gui.html.table_bg_colour)"
      fgcolor="$spy.GetParam(gui.html.font_colour)"
      name="USE_FADER"
      checked="$spy.GetParam(gui.use_fader)"
      width='53' 
      oncheck="spy.SetParam(gui.use_fader,true)" 
      onuncheck="spy.SetParam(gui.use_fader,false)">
      </td>
  </tr>

